* {
  font-family : STYuanti-SC-Regular;
}
body {
  background-color: #f7f7f7;
}
a {
  color: #333;
  text-decoration: none;
  &:hover,&:active,&:focus {
    color: #333;
    text-decoration: none;
  }
}
.content-info {
  .competition-image {
    max-width: 100%;
  }
  .simditor-table {

    width: 100%;
    table {
      width: 100%;
      text-align: center;
      tr {
        th {
          text-align: center;
          border: 1px solid #ccc;
        }
        td {
          border: 1px solid #ccc;
        }
        &:nth-child(even) {
          background-color: #f5f5f5;
        }
      }
    }
  }
}